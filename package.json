{
	"devDependencies": {
		"@eslint/compat": "latest",
		"@eslint/eslintrc": "latest",
		"@eslint/js": "latest",
		"@playwright/test": "latest",
		"eslint": "latest",
		"globals": "latest",
		"http-server": "latest",
		"lighthouse": "latest",
		"npm-run-all": "latest",
		"rimraf": "latest",
		"serve": "latest"
	},
	"scripts": {
		"analyze": "lighthouse http://localhost:3000 --output json --output html --output-path ./lighthouse-report.html",
		"build": "npm-run-all clean",
		"clean": "rimraf public/styles/*.min.css",
		"configure": "node scripts/configure.js",
		"kill": "npx kill-port 3000",
		"lint": "eslint .",
		"start": "npx serve ./public",
		"start:https": "npx http-server ./public --ssl --cert ./localhost.crt --key ./localhost.key -o",
		"test": "npx lighthouse http://localhost:3000 --view",
		"test:e2e": "playwright test",
		"test:e2e:staging": "cross-env TEST_ENV=staging playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:update-snapshots": "playwright test --update-snapshots"
	},
	"type": "module"
}
