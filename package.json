{
	"devDependencies": {
		"@eslint/compat": "latest",
		"@eslint/eslintrc": "latest",
		"@eslint/js": "latest",
		"@playwright/test": "latest",
		"eslint": "latest",
		"globals": "latest",
		"http-server": "latest",
		"lighthouse": "latest",
		"npm-run-all": "latest",
		"serve": "latest"
	},
	"scripts": {
		"analyze": "lighthouse http://localhost:3000 --output json --output html --output-path ./lighthouse-report.html",
		"kill": "npx kill-port 3000",
		"lint": "eslint .",
		"start": "npx serve ./public",
		"start:https": "npx http-server ./public --ssl --cert ./localhost.crt --key ./localhost.key -o",
		"test": "playwright test",
		"test:staging": "cross-env TEST_ENV=staging playwright test",
		"test:ui": "playwright test --ui",
		"test:update-snapshots": "playwright test --update-snapshots",
		"test:debug": "playwright test --debug",
		"test:prod": "cross-env TEST_ENV=production playwright test --project=chromium",
		"test:report": "playwright show-report",
		"test:generate": "playwright codegen http://localhost:3000",
		"test:theme": "playwright test theme-toggle.test.js --project=chromium",
		"screenshots": "node scripts/generate-screenshots.js",
		"screenshots:prod": "cross-env BASE_URL=https://your-production-url.com node scripts/generate-screenshots.js"
	},
	"type": "module"
}
